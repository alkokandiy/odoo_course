<!-- school_document_views.xml -->
<odoo>
    <record id="view_school_document_tree" model="ir.ui.view">
        <field name="name">school.document.tree</field>
        <field name="model">school.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="file_name" />
            </tree>
        </field>
    </record>

    <record id="view_school_document_form" model="ir.ui.view">
        <field name="name">school.document.form</field>
        <field name="model">school.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="file_name" />
                        <field name="file_data" filename="file_name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_document" model="ir.actions.act_window">
        <field name="name">Talaba hujjatlari</field>
        <field name="res_model">school.document</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_school_document_root" name="Hujjatlar" sequence="10" />

    <menuitem
        id="menu_school_document"
        name="Talaba hujjatlari"
        parent="menu_school_document_root"
        action="action_school_document"
        sequence="10"
    />
</odoo>
