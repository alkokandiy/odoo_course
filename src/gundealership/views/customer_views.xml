<odoo>
    <record id="view_form_customer" model="ir.ui.view">
        <field name="name">customer.form</field>
        <field name="model">gun.dealership.customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="codename" />
                        <field name="affiliation" />
                        <field name="favorite_weapon" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_customer" model="ir.ui.view">
        <field name="name">customer.tree</field>
        <field name="model">gun.dealership.customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="codename" />
                <field name="affiliation" />
                <field name="favorite_weapon" />
            </tree>
        </field>
    </record>

    <record id="action_customer" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">gun.dealership.customer</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
