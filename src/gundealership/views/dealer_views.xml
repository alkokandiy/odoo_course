<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_form_dealer" model="ir.ui.view">
        <field name="name">dealer.form</field>
        <field name="model">gun.dealership.dealer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="country" />
                    </group>
                    <notebook>
                        <page string="Guns">
                            <field name="gun_ids">
                                <list>
                                <field name="name" />
                                <field name="type" />
                                <field name="caliber" />
                                <field name="price" />
                                <field name="stock" />
                                <field name="dealer_id" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_dealer" model="ir.ui.view">
        <field name="name">dealer.tree</field>
        <field name="model">gun.dealership.dealer</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="country" />
            </list>
        </field>
    </record>

    <record id="action_dealer" model="ir.actions.act_window">
        <field name="name">Dealers</field>
        <field name="res_model">gun.dealership.dealer</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
