<odoo>
    <record id="view_form_dealer" model="ir.ui.view">
        <field name="name">dealer.form</field>
        <field name="model">gun.dealership.dealer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="country" />
                        <field name="license_no" />
                    </group>
                    <notebook>
                        <page string="Guns">
                            <field name="gun_ids">
                                <tree>
                                    <field name="name" />
                                    <field name="type" />
                                    <field name="price" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_dealer" model="ir.ui.view">
        <field name="name">dealer.tree</field>
        <field name="model">gun.dealership.dealer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="country" />
                <field name="license_no" />
            </tree>
        </field>
    </record>

    <record id="action_dealer" model="ir.actions.act_window">
        <field name="name">Dealers</field>
        <field name="res_model">gun.dealership.dealer</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
