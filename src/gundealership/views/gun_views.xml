<odoo>
    <record id="view_form_gun" model="ir.ui.view">
        <field name="name">gun.form</field>
        <field name="model">gun.dealership.gun</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="type" />
                        <field name="caliber" />
                        <field name="price" />
                        <field name="stock" />
                        <field name="dealer_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_gun" model="ir.ui.view">
        <field name="name">gun.tree</field>
        <field name="model">gun.dealership.gun</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="type" />
                <field name="caliber" />
                <field name="price" />
                <field name="stock" />
                <field name="dealer_id" />
            </tree>
        </field>
    </record>

    <record id="action_gun" model="ir.actions.act_window">
        <field name="name">Guns</field>
        <field name="res_model">gun.dealership.gun</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
