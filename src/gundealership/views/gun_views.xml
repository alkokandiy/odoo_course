<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="view_tree_gun" model="ir.ui.view">
    <field name="name">gun.tree</field>
    <field name="model">gun.dealership.gun</field>
    <field name="arch" type="xml">
      <list>
        <field name="name" />
        <field name="type" />
        <field name="caliber" />
        <field name="price" />
        <field name="stock" />
        <field name="dealer_id" />
      </list>
    </field>
  </record>

  <record id="view_form_gun" model="ir.ui.view">
    <field name="name">gun.form</field>
    <field name="model">gun.dealership.gun</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" />
            <field name="type" />
            <field name="caliber" />
            <field name="price" />
            <field name="stock" />
            <field name="dealer_id" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_gun" model="ir.actions.act_window">
    <field name="name">Guns</field>
    <field name="res_model">gun.dealership.gun</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
