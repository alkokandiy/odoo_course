<odoo>
    <!-- List View -->
    <record id="view_food_product_list" model="ir.ui.view">
        <field name="name">food.product.list</field>
        <field name="model">food.product</field>
        <field name="arch" type="xml">
            <list string="Food Products" editable="bottom">
                <field name="name" />
                <field name="description" />
                <field name="price" />
                <field name="quantity" />
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_food_product_form" model="ir.ui.view">
        <field name="name">food.product.form</field>
        <field name="model">food.product</field>
        <field name="arch" type="xml">
            <form string="Food Product">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                        <field name="price" />
                        <field name="quantity" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_food_product" model="ir.actions.act_window">
        <field name="name">Food Products</field>
        <field name="res_model">food.product</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_food_root" name="Food" />
    <menuitem
        id="menu_food_product"
        name="Products"
        parent="menu_food_root"
        action="action_food_product"
    />
</odoo>
