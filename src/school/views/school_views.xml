<odoo>
    <!-- School -->
    <record id="view_school_tree" model="ir.ui.view">
        <field name="name">school.school.tree</field>
        <field name="model">school.school</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="city" />
            </list>
        </field>
    </record>

    <record id="view_school_form" model="ir.ui.view">
        <field name="name">school.school.form</field>
        <field name="model">school.school</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="city" />
                    </group>
                    <notebook>
                        <page string="Students">
                            <field name="student_ids">
                                <list editable="bottom">
                                    <field name="name" />
                                    <field name="age" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Student -->
    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">school.student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="age" />
                <field name="school_id" />
            </list>
        </field>
    </record>

    <record id="view_student_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="age" />
                        <field name="school_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="school_root_menu" name="School" />

    <menuitem
        id="school_menu"
        name="Schools"
        parent="school_root_menu"
        sequence="1"
    />

    <menuitem
        id="student_menu"
        name="Students"
        parent="school_root_menu"
        sequence="2"
    />

    <!-- Actions -->
    <record id="action_schools" model="ir.actions.act_window">
        <field name="name">Schools</field>
        <field name="res_model">school.school</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_students" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Attach actions to menus -->
    <menuitem
        id="menu_schools_action"
        parent="school_menu"
        action="action_schools"
    />
    <menuitem
        id="menu_students_action"
        parent="student_menu"
        action="action_students"
    />

</odoo>
