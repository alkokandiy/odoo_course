<odoo>
    <record id="view_uzum_product_tree" model="ir.ui.view">
        <field name="name">uzum.product.tree</field>
        <field name="model">uzum.product</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="category" />
                <field name="subcategory" />
                <field name="price" widget="monetary" />
                <field name="stock" />
                <field name="color" />
                <field name="rating" />
            </list>
        </field>
    </record>

    <record id="view_uzum_product_form" model="ir.ui.view">
        <field name="name">uzum.product.form</field>
        <field name="model">uzum.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="category" />
                        <field name="subcategory" />
                        <field name="price" />
                        <field name="stock" />
                        <field name="color" />
                        <field name="rating" />
                    </group>
                    <group>
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_uzum_product_search" model="ir.ui.view">
        <field name="name">uzum.product.search</field>
        <field name="model">uzum.product</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <filter
                    string="Electronics"
                    name="filter_electronics"
                    domain="[('category','=','electronics')]"
                />
                <filter
                    string="Books"
                    name="filter_books"
                    domain="[('category','=','books')]"
                />
                <filter
                    string="Home"
                    name="filter_home"
                    domain="[('category','=','home')]"
                />
                <filter
                    string="Sports"
                    name="filter_sports"
                    domain="[('category','=','sports')]"
                />
                <group expand="0" string="Group By">
                    <filter
                        string="Category"
                        name="group_category"
                        context="{'group_by':'category'}"
                    />
                    <filter
                        string="Subcategory"
                        name="group_subcategory"
                        context="{'group_by':'subcategory'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="action_uzum_product" model="ir.actions.act_window">
        <field name="name">Uzum Products</field>
        <field name="res_model">uzum.product</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_uzum_root" name="Uzum Market" />
    <menuitem
        id="menu_uzum_product"
        name="Products"
        parent="menu_uzum_root"
        action="action_uzum_product"
    />
</odoo>
